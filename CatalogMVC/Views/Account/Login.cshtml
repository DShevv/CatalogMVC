@using CatalogMVC.ViewModels
@model LoginViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Вход";
}

<form asp-action="Login" method="post" class="">
    
    <h1 class="h3 mb-3 fw-normal">Пожалуйста авторизируйтесь</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-floating col-sm-3 mt-3">
        <input asp-for="Login" class="form-control"  placeholder="Логин">
        <label asp-for="Login">Логин</label>
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-floating  col-sm-3 mt-3">
        <input asp-for="Password" class="form-control"  placeholder="Пароль">
        <label asp-for="Password">Пароль</label>
        <span asp-validation-for="Password" class="text-danger">    
            @if(TempData["Error"] != null){
                @Html.Raw(TempData["Error"])
            }
        </span>

    </div>

    <button class="btn btn-lg btn-primary mt-3" type="submit">Войти</button>
</form>
