@{
}

<section class="container-fluid">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-left">
            <h1 class="fw-light">ВЫ действительно хотите удалить категорию:</h1>
            <h2>@Model.Name</h2>
            <p>
                <form  asp-action="Delete" method="post">
                    <input type="hidden" asp-for="@Model.Id"/>
                    <input type="submit" value="Удалить" class="btn btn-danger my-2" />
                </form>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary my-2">Отмена</a>
            </p>
        </div>
    </div>
</section>