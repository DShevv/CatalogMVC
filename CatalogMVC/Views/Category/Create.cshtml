@{
}

<h1>Создание категории</h1>

<form asp-controller="Category" method="post" asp-action="Create" >
    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
    <div class="row g-3 my-3">
        <div class="col-sm-3">
            <label asp-for="Name" class="control-label">@Html.DisplayNameFor(model => model.Name)</label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger" ></span>
            <span data-val-required></span>
        </div>
    </div>


    <button class="btn btn-primary btn-lg" type="submit">Создать</button>
</form>